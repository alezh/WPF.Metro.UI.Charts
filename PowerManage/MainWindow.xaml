                                ItemsSource="{Binding scatterData.Items}"
                                ValueMember="Voltage" />
            </charts:GAMultipleTypeSeriesChart.Series>
        </charts:GAMultipleTypeSeriesChart>-->

    </Grid>

</Controls:MetroWindow>
